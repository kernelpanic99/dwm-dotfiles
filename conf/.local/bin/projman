#!/bin/bash

#vim:ft=bash

PROJ_DIR="$HOME/adev"
TERM='st'
IDE='nvim'

function list_projects() {
    for proj in $PROJ_DIR/*; do
        echo $(basename $proj)
    done | dmenu -p 'Select project>' -l 10
}

choice=$(list_projects)

if [ ! -z "$choice" ]; then
    target_dir=$PROJ_DIR/$choice

    /bin/bash -c "cd $target_dir; $TERM -e $IDE" 
fi
